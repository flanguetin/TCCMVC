@model IEnumerable<ASP1_TCC.courts>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Surface
        </th>
        <th>
            Situation
        </th>
        <th>
            Nom
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.surface)
        </td>
        <td>
            @if (item.inside == 1)
            {
                @: Intérieur
            }
            else
            {
                @: Extérieur
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Editer", "Edit", new { id=item.idCourts }) |
            @Html.ActionLink("Details", "Details", new { id=item.idCourts }) |
            @Html.ActionLink("Supprimer", "Delete", new { id = item.idCourts }) |
            @Html.RouteLink("Occupation", new { action = "Index", controller = "CourtSchedule", courtid = item.idCourts })
        </td>
    </tr>
}

</table>
